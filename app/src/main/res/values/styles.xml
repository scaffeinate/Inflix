<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/BodyBold</item>
    </style>

    <style name="TranslucentStatusBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:editTextColor">@color/textColorLight</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="Display">
        <item name="android:textSize">@dimen/font_size_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="Title" parent="Display">
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="SubHeading" parent="Title">
        <item name="android:textSize">@dimen/font_size_subheading</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>


    <style name="BodyBold" parent="Body">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="Caption" parent="Body">
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="CaptionItalic" parent="Caption">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TagStyle">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/tagColor</item>
    </style>

    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">10</item>
        <item name="android:scaleX">1.20</item>
        <item name="android:scaleY">1.35</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>
</resources>
