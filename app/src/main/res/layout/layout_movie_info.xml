<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_poster"
            layout="@layout/item_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_movie_info_title_margin_left"
            android:maxLines="3"
            android:textAppearance="@style/Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/layout_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layout_poster"
            app:layout_constraintTop_toTopOf="@+id/layout_poster"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_movie_runtime"
            style="@style/TagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_movie_info_field_margin_top"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
            app:layout_constraintStart_toStartOf="@+id/tv_movie_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            tools:text="@string/hundred_min" />

        <TextView
            android:id="@+id/tv_movie_status"
            style="@style/TagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_movie_info_field_margin_top"
            android:layout_marginLeft="5dp"
            android:background="@color/tagColor"
            app:layout_constraintLeft_toRightOf="@+id/tv_movie_runtime"
            app:layout_constraintStart_toEndOf="@+id/tv_movie_runtime"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_movie_runtime"
            tools:text="@string/released" />

        <RelativeLayout
            android:id="@+id/layout_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_movie_info_field_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_runtime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_movie_runtime"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_runtime">

            <RatingBar
                android:id="@+id/rb_movie_rating"
                style="@style/RatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_movie_rating"
                android:textAppearance="@style/Display"
                tools:text="@string/seven_point_five" />

            <TextView
                android:id="@+id/tv_movie_rating_out_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_movie_rating"
                android:layout_marginStart="@dimen/layout_movie_info_rating_out_of_margin_left"
                android:layout_toEndOf="@+id/tv_movie_rating"
                android:layout_toRightOf="@+id/tv_movie_rating"
                android:text="@string/out_of_10"
                android:textAppearance="@style/SubHeading" />

            <TextView
                android:id="@+id/tv_movie_rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_movie_rating_out_of"
                android:layout_marginStart="@dimen/layout_movie_info_rating_num_margin_left"
                android:layout_toEndOf="@+id/tv_movie_rating_out_of"
                android:layout_toRightOf="@+id/tv_movie_rating_out_of"
                android:textAppearance="@style/SubHeading"
                tools:text="@string/ten_thousand" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>