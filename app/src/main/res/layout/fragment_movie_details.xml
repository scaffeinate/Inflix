<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<FrameLayout
		android:id="@+id/layout_movie_details_parent"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.constraint.ConstraintLayout
			android:id="@+id/layout_movie_detail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:descendantFocusability="blocksDescendants"
			android:padding="@dimen/activity_detail_padding"
			android:visibility="invisible">

			<include
				android:id="@+id/layout_movie_info"
				layout="@layout/layout_movie_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

			<include
				android:id="@+id/layout_content"
				layout="@layout/layout_content"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/actvity_detail_section_margin_top"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/layout_movie_info"/>

			<include
				android:id="@+id/layout_cast"
				layout="@layout/layout_cast"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:clipToPadding="false"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/layout_content"/>

			<include
				android:id="@+id/layout_movie_similar"
				layout="@layout/layout_similar"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="22dp"
				android:clipToPadding="false"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/layout_cast"/>
		</android.support.constraint.ConstraintLayout>

		<TextView
			android:id="@+id/text_view_error_message_display"
			style="@style/Caption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:layout_marginTop="@dimen/activity_detail_margin_top"
			android:text="@string/couldnt_load_movie_info_error_message"
			android:visibility="invisible"/>

		<ProgressBar
			android:id="@+id/progress_bar_movie_details"
			android:layout_width="@dimen/progressbar_size"
			android:layout_height="@dimen/progressbar_size"
			android:layout_gravity="top|center_horizontal"
			android:layout_marginTop="@dimen/activity_detail_margin_top"
			android:visibility="visible"/>
	</FrameLayout>
</layout>