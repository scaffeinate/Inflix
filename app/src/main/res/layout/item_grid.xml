<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/posterBgColor">

    <RelativeLayout
        android:id="@+id/layout_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_grid_placeholder_height">

        <ImageView
            android:id="@+id/imageview_movie_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_movie_roll_grey600_48dp" />

        <TextView
            android:id="@+id/tv_movie_name"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_movie_roll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/item_grid_movie_name_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:scaleType="fitXY"
        android:visibility="visible" />
</FrameLayout>