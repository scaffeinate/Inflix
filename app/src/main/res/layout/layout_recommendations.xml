<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_recommendations_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:text="@string/recommendations"
			android:textAppearance="@style/SubHeading"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_recommendations"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/tv_recommendations_title"
			android:layout_marginTop="@dimen/layout_recommendations_rv_margin_top"
			/>
	</RelativeLayout>
</layout>