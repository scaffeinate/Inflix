<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_movie_synopsis_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textAppearance="@style/SubHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_tagline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:textAppearance="@style/CaptionItalic"
            android:textColor="@color/textColorAlternate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_synopsis_title"
            tools:text="@string/no_tagline_error_message" />

        <TextView
            android:id="@+id/tv_movie_plot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:text="@string/plot"
            android:textAppearance="@style/SubHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_tagline" />

        <TextView
            android:id="@+id/tv_movie_plot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:lineSpacingMultiplier="1.25"
            android:textAppearance="@style/Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_plot_title"
            tools:text="@string/lorem_ipsum" />

        <TextView
            android:id="@+id/tv_movie_genres_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:text="@string/genres"
            android:textAppearance="@style/SubHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_plot" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layout_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:orientation="horizontal"
            app:flChildSpacing="@dimen/layout_content_tag_horizontal_spacing"
            app:flRowSpacing="@dimen/layout_content_tag_vertical_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_genres_title" />

        <TextView
            android:id="@+id/tv_budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:text="@string/budget"
            android:textAppearance="@style/SubHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_genres" />

        <TextView
            android:id="@+id/tv_budget"
            style="@style/TagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_budget_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/random_budget" />

        <TextView
            android:id="@+id/tv_revenue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_content_field_margin_top"
            android:text="@string/revenue"
            android:textAppearance="@style/SubHeading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_title" />

        <TextView
            android:id="@+id/tv_revenue"
            style="@style/TagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_revenue_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/random_budget" />
    </android.support.constraint.ConstraintLayout>
</layout>