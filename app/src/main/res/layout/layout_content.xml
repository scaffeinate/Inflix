<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_movie_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_tagline"
        android:background="@color/posterBgColor"
        android:padding="5dp"
        android:textAppearance="@style/CaptionItalic" />

    <TextView
        android:id="@+id/tv_movie_plot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_detail_plot_title_margin_top"
        android:text="@string/plot"
        android:textAppearance="@style/SubHeading" />

    <TextView
        android:id="@+id/tv_movie_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_detail_plot_margin_top"
        android:textAppearance="@style/Body"
        android:lineSpacingMultiplier="1.25" />
</LinearLayout>